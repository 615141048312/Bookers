<%= render partial: 'users/sidebar', locals: {user:@user, new_book:@new_book} %>

<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>&nbsp;</th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= attachment_image_tag book, :profile_image, :fill, 10, 10, format: 'jpeg', fallback: "no_image.jpg" %></td>
			<td><%= link_to book.title, book_path(book.id) %></td>
			<td><%= book.opinion %></td>
		</tr>
		<% end %>
	</tbody>
</table>