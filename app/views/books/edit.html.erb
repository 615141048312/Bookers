<h1>Editing Book</h1>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
	<div class="field">
		<label for="book_title">Title</label>
		<%= f.text_field :title, :class => "book_title" %>
	</div>
	<div class="field">
		<label for="book_opinion">Opinion</label>
		<%= f.text_area :opinion, :class => "book_opinion" %>
	</div>
	<div class="action">
	<%= f.submit 'Update Book' %>
	</div>
<% end %>
<%= link_to "Show", book_path(@book.id) %>
