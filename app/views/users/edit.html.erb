<h1>User info</h1>
<%= form_for(@user) do |f| %>
    <div class="field">
        <label>Name</label>
        <%= f.text_field :name, autofocus: true, placeholder:""%>
    </div>
    <div>
        <%= f.attachment_field :profile_image %>
    </div>
    <div class="field">
        <label>Introduction</label>
        <%= f.text_area :introduction, autofocus: true, placeholder:"" %>
    </div>
    <%= f.submit "Update user" %>
<% end %>