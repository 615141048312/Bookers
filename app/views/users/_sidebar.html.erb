<h1>User info</h1>
<%= attachment_image_tag user, :profile_image_id, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
<table>
	<tr>
		<th>name</th>
		<td><%= user.name %></td>
	</tr>
	<tr>
		<th>introduction</th>
		<td><%= user.introduction %></td>
	</tr>
</table>
<p><%= link_to "edit", edit_user_path(user) %></p>

<h1>New book</h1>
<%= form_for(new_book, url:'/books') do |f| %>
	<div class="field">
		<label for="book_title">Title</label>
		<%= f.text_field :title, :class => "book_title" %>
	</div>
	<div class="field">
		<label for="book_opinion">Opinion</label>
		<%= f.text_area :body, :class => "book_opinion" %>
	</div>
	<div class="action">
	<%= f.submit 'Create Book' %>
	</div>
<% end %>
